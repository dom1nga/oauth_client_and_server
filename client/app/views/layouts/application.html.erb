<!DOCTYPE html>
<html>
<head>
  <title>Client</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <% if user_signed_in? %>
    <p> You logged as: <%= current_user.email  %>
    <%= link_to 'Log out', sign_out_path %>
  <% else %>
    <%= link_to 'Log in', sign_in_path %>
  <% end %>
  <%= yield %>
</body>
</html>
